{% extends 'layout.html.twig' %}

{% block body %}
  {% if error %}
    <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
  {% endif %}

  <form action="{{ path('app_login') }}" method="post">
    <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

    <div data-mdb-input-init class="form-outline mb-4">
      <label for="username" class="form-check-label">Email:</label>
      <input type="text" id="username" name="_username" value="{{ last_username }}" class="form-control">
    </div>

    <div data-mdb-input-init class="form-outline mb-4">
      <label for="password" class="form-check-label">Password:</label>
      <input type="password" id="password" name="_password" class="form-control">
    </div>
    {# If you want to control the URL the user is redirected to on success
        <input type="hidden" name="_target_path" value="/account"> #}

    <button type="submit" data-mdb-button-init data-mdb-ripple-init class="btn btn-primary btn-block mb-4">login
    </button>
  </form>
  <a href="{{ url('app_register') }}">Регистрация</a>
{% endblock %}
